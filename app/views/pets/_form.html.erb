<div id="edit-form">
  <form method="post" action="/pets/<%= @pet.id %>" class="edit-pet-form">
    
  <% if @pet.persisted? %>
    <input name="_method" type="hidden" value="patch">
  <% end %>
  
  <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>
  
  <!-- <input type="hidden" name="auth_key" value=<%= 3 %>> -->
  <label for="edit-pet-name">Name: </label>
      <input type="text" name="pet[name]" class="edit-form-inputs" id="edit-pet-name"
      placeholder="name" value = <%= @pet.name %>>
      <br>
       <label for="edit-pet-animal">Animal Type: </label>
          <select name="pet[animal]" id="edit-pet-animal" value = <%= @pet.animal %>>
            <option value="cat">Cat</option>
            <option value="dog">Dog</option>
            <option value="other">Other</option>
          </select><br>
          <br>
  <label for="edit-pet-age">Age: </label>
      <input type="integer" name="pet[age]" class="edit-form-inputs" id="edit-pet-age"
      placeholder="age" value = <%= @pet.age %> >
      <br>
  <label for="edit-pet-image">Picture (url): </label>
      <input type="text" name="pet[image_url]" class="edit-form-inputs" id="edit-pet-image"
       value=<%= session[:pet_img_url] %> size="50">
      <br>
  <label for="edit-pet-color">Color: </label>
      <select name="pet[color]" id="edit-pet-color" value = <%= @pet.color %>>
        <option value="black">Black</option>
        <option value="white">White</option>
        <option value="gray">Gray</option>
        <option value="yellow">Yellow</option>
        <option value="red">Red</option>
        <option value="polka_dot">Multicolored</option>
      </select><br>
      <br>
  Gender:
      <input type="radio" name="pet[gender]" value="Male"> Male
      <input type="radio" name="pet[gender]" value="Female"> Female<br>
      <br>
  <label for="edit-pet-bio">Bio: </label>
      <textarea type="text" name="pet[bio]" id="edit-pet-bio"><%=@pet.bio%></textarea>
      <br>
      <input type="submit" value="Save pet" class="btn btn-primary" id="edit-pet-button">
  </form>
</div>