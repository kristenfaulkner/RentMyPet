<div>
  <img src= "<%= @pet.image_url %>" width="40%" height="40%">
  <% if @user.id != @pet.owner_id %>
    <h3><%= link_to "Click Here To Rent Me", new_pet_pet_rental_request_url(@pet.id)%></h3>
  <% end %>
</div>

<div class="contact-row row">
  <div class="col-xs-5" id="contact-column1">
    <br>
    <p><strong>Pet Information</stong></p>
    <p>Name: <%=@pet.name%></p>
    <p>Owner: <%= User.find(@pet.owner_id).username %></p>
    <p>Pet ID: <%=@pet.id%></p>
    <p>Age: <%=@pet.age%></p>
    <p>Color: <%=@pet.color%></p>
    <p>Gender: <%=@pet.gender%></p>
    <p>Bio: <%=@pet.bio%></p>
  </div>
  
  <div class="col-xs-5" id="contact-column2">
    <ul style="list-style: none;">
      <% if current_user.id == @pet.owner_id %>
        <%=link_to "Edit your pet", edit_pet_url(@pet) %>
      <% if @pet.pet_rental_requests%>
        <% @pet.pet_rental_requests.each do |rental| %>
          ------------------------<br>
          <li>
            Requester: <%= User.find(rental.requester_id).username %> - 
            Start Date: <%= rental.start_date %>
            -  End Date: <%= rental.end_date %> - Status: <%= rental.status %>
            <form action="<%=pet_pet_rental_request_url(@pet.id, rental.id)%>" method = "post">
                <input name="_method" type="hidden" value="patch">
              <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>
              <% if rental.status == "Pending" %>
                <input type = "submit" 
                       name = "pet_rental_request[status]" 
                       value = "Approve">
                <input type = "submit" 
                       name = "pet_rental_request[status]" 
                       value = "Deny">
              <% end %>
            </form>
        </li>
      <% end %>
      <%end%>
      <%end%>
    </ul>
  </div>
</div>